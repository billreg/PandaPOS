<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_product"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="Coca cola"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name_presetation"
                android:layout_width="wrap_content"
                android:textColor="@color/color_base"
                android:paddingLeft="2dp"
                android:textStyle="bold"
                android:text="Hola"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/volumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/inventory_volumen_color"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:text="1X10"
                android:layout_marginLeft="5dp"
                android:textSize="14dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quantity_per_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_name"
                android:textStyle="bold"
                android:text="100 ml"
                android:textSize="14dp" />




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/sale_price_unt"
                android:layout_width="wrap_content"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="S/12.0"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/sale_price"
                android:layout_width="wrap_content"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_base"
                android:text="S/14.0"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/purchase_price"
                android:layout_width="wrap_content"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_name"
                android:text="S/13.0"
                android:textSize="16dp" />
        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:paddingLeft="15dp">
        <Switch
            android:id="@+id/switch_active"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/color_base"
            android:text="" />
    </LinearLayout>


</LinearLayout>