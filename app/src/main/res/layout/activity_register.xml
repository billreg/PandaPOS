<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Register">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_base_white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textSize="30dp"
                android:textColor="@color/black">

            </TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electr칩nico"
                android:textSize="15dp">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="5dp"
                    android:textSize="17dp"
                    android:background="@drawable/border_shape"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contrase침a"
                android:textSize="15dp">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textSize="17dp"
                    android:background="@drawable/border_shape"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar contrase침a"
                android:textSize="15dp">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_pasword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textSize="17dp"
                    android:background="@drawable/border_shape"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>

    <!--    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del negocio"
                android:textSize="15dp">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_busioness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="5dp"
                    android:textSize="17dp"
                    android:background="@drawable/border_shape"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de negocio"
                android:textSize="15dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@drawable/border_shape"
                android:gravity="center"
                android:padding="3dp">
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/material_spinner_business_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_padding_left="5dp"
                    app:ms_padding_top="0dp"
                    app:ms_padding_bottom="0dp"
                    android:textSize="17dp"
                    app:ms_popup_padding_left="5dp">

                </com.jaredrummler.materialspinner.MaterialSpinner>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/color_base_white">
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="0dp"
            android:background="@drawable/border_shape_info_car"
            android:text="Registrarse" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="@color/color_base_white"
        android:padding="20dp">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya tienes una cuenta? "
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginLeft="3dp">

            </TextView>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Iniciar sesi칩n"
                android:textSize="16dp"
                android:textColor="@color/color_name"
                android:layout_marginRight="3dp">

            </TextView>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>