<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="3dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_sale_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coca cola"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:paddingLeft="3dp">

            </TextView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_sale_presentation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textColor="@color/color_base"
                    android:text="naranja"
                    android:textStyle="bold"
                    android:textSize="17dp">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/list_sale_volumen_wegth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/inventory_volumen_color"
                android:paddingLeft="3dp"
                android:text="300 ml"
                android:textStyle="bold"
                android:textSize="14dp">

            </TextView>

<!--            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">
                <Switch
                    android:id="@+id/und_pqt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:paddingLeft="3dp"
                    android:text="XPQT"
                    android:textColor="@color/black">
                </Switch>

            </LinearLayout>-->


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/new_sale_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/black">
                </TextView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textAlignment="center"
                    android:background="@color/color_base_white2"
                    android:textColor="@color/color_name"
                    android:textSize="20dp">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/bbhh"
                    android:prompt="@string/bbhh">
                </Spinner>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:padding="0dp">


            <com.google.android.material.chip.Chip
                android:id="@+id/massales"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:background="@color/white"
                app:chipBackgroundColor="@color/white"
                app:chipIcon="@drawable/mas"
                app:chipIconTint="@color/color_base_selected"
                app:chipIconSize="27dp"
                app:iconEndPadding="0dp"
                app:iconStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipEndPadding="0dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:defaultFocusHighlightEnabled="true">
            </com.google.android.material.chip.Chip>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/new_sales_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="22dp">

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/type_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="und"
                        android:padding="2dp"
                        android:textColor="@color/black"
                        android:textSize="8dp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/menossales"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:background="@color/white"
                app:chipBackgroundColor="@color/white"
                app:chipIcon="@drawable/menos"
                app:chipIconTint="@color/color_base_selected"
                app:chipIconSize="27dp"
                app:iconEndPadding="0dp"

                app:textEndPadding="0dp"

                app:chipStartPadding="0dp"
                app:chipEndPadding="0dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:defaultFocusHighlightEnabled="true">
            </com.google.android.material.chip.Chip>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:paddingRight="10dp">
        <Button
            android:id="@+id/sale_product"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/border_shape"
            android:text="Vender">

        </Button>

    </LinearLayout>

</LinearLayout>