<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:padding="20dp">

    <TextView
        android:id="@+id/button_cancel_sale"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="490dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:text="CANCELAR"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txt_voucher_number"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_blue_dark"
        android:text="ID: 001"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16dp" />



    <Spinner
        android:id="@+id/spinner_type_sale"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="350dp"
        android:entries="@array/pay_type"
        android:prompt="@string/pay_type"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_total_sale"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:text="S/2.50"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/sale_spinner_quantity"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginTop="200dp"
        android:entries="@array/quentity"
        android:prompt="@string/quentity"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_unit_package_price"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="200dp"
        android:clickable="false"
        android:ems="10"
        android:gravity="center"
        android:focusable="false"
        android:text="S/2.50"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_sale_hh"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="250dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:text="0.00"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:text=" NUEVA VENTA"
        android:textAlignment="center"

        android:textSize="24dp" />

    <TextView
        android:id="@+id/sale_name_product"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:clickable="false"
        android:contextClickable="false"
        android:ems="10"
        android:focusable="false"
        android:text="Coca cola 500 ml"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_pay_sale"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="440dp"
        android:text="Completar venta"
        android:textAlignment="center"
        android:textSize="14dp" />

    <Spinner
        android:id="@+id/spinner_sale_type"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="150dp"
        android:entries="@array/unidad_paquete"
        android:prompt="@string/spn_title"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spinner_sale_BBHH"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginTop="250dp"
        android:entries="@array/properties"
        android:prompt="@string/properties"
        android:textAlignment="center" />
</RelativeLayout>